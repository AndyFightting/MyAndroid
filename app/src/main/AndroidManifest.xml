<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suguiming.myandroid" >

    <!-- 网络变化 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- sd card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:name=".base.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".tab0.SwipeListViewActivity"
            android:label="@string/title_activity_swipe_list_view" >
        </activity>
        <activity
            android:name=".tool.customView.PopMenue"
            android:label="@string/title_activity_pop"
            android:theme="@style/PopActivityTheme" >
        </activity>
        <activity
            android:name=".tab0.FadeInOutActivity"
            android:label="@string/title_activity_fade_in_out"
            android:theme="@style/ActivityFadeInOutTheme" >
        </activity>
        <activity
            android:name=".tab0.PresentActivity"
            android:label="@string/title_activity_present"
            android:theme="@style/ActivityPresentTheme" >
        </activity>
        <activity
            android:name=".tool.customView.ActionSheet"
            android:theme="@style/ActionSheetTheme" />
        <activity
            android:name=".SlidingMenuActivity"
            android:label="@string/title_activity_sliding_menu" >
        </activity>
        <activity
            android:name=".tab0.SlidingMenuActivity"
            android:label="@string/title_activity_sliding_menu" >
        </activity>
    </application>

</manifest>
