<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suguiming.myandroid" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".base.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".tab0.SwipeListViewActivity"
            android:label="@string/title_activity_swipe_list_view" >
        </activity>
        <activity
            android:name=".tool.customDialog.PopActivity"
            android:theme="@style/MyDialogTopRight"
            android:label="@string/title_activity_pop" >
        </activity>
    </application>

</manifest>
