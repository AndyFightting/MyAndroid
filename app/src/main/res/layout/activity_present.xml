<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suguiming.myandroid.tab0.PresentActivity">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:canLoop="true"/>
    <TextView
        android:gravity="center"
        android:text="Draw 自定义属性设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"/>

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:border_color="@color/red"
            app:border_width="2dp"
            app:corner_radius="10dp" />

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:border_color="@color/yellow"
            app:border_width="5dp"
            app:corner_radius="10dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:image_type="corner_image"
            app:corner_radius="30dp" />


        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:image_type="corner_image"
            app:border_color="@color/green"
            app:border_width="2dp"
            app:corner_radius="8dp" />

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:image_type="corner_image"
            app:border_color="@color/purple"
            app:border_width="10dp"
            app:corner_radius="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            app:inner_color="@color/blue"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            app:corner_radius="20dp"
            app:inner_color="@color/purple"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            app:border_width="1dp"
            app:border_color="@color/blue"
            app:inner_color="@color/white"
            android:layout_marginRight="10dp"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            app:inner_color="@color/green"
            app:border_color="@color/red"
            app:border_width="1dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            app:corner_radius="20dp"
            app:border_width="3dp"
            app:border_color="@color/yellow"
            app:inner_color="@color/orange_dark"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    
</LinearLayout>
