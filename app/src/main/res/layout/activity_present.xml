<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suguiming.myandroid.tab0.PresentActivity">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:canLoop="true"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"/>

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:borderColor="@color/red"
            app:borderWidth="2dp"
            app:cornerRadius="10dp" />

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:borderColor="@color/yellow"
            app:borderWidth="5dp"
            app:cornerRadius="10dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:imageType="corner_image"
            app:cornerRadius="30dp" />


        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:imageType="corner_image"
            app:borderColor="@color/green"
            app:borderWidth="2dp"
            app:cornerRadius="8dp" />

        <com.suguiming.myandroid.tool.customView.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/round_test"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            app:imageType="corner_image"
            app:borderColor="@color/purple"
            app:borderWidth="10dp"
            app:cornerRadius="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            app:borderWidth="2dp"
            app:borderColor="@color/green"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.suguiming.myandroid.tool.customView.BorderTextView
            android:text="Hello World"
            android:padding="10dp"
            app:borderColor="@color/green"
            android:textColor="@color/red"
            app:borderWidth="2dp"
            app:cornerRadius="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    
</LinearLayout>
