<resources>

    <!-- app default theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!-- pop menu theme-->
    <style name="PopActivityTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/PopActivityAnimation</item>
    </style>
    <style name="PopActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/pop_menu_in</item>
        <item name="android:activityOpenExitAnimation">@anim/pop_menu_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/pop_menu_in</item>
        <item name="android:activityCloseExitAnimation">@anim/pop_menu_out</item>
    </style>

      <!-- fade in out Activity theme-->
    <style name="ActivityFadeInOutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityFadeInOutAnimation</item>
    </style>
    <style name="ActivityFadeInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_fade_out</item>
    </style>

    <!-- iOS present activity theme-->
    <style name="ActivityPresentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item> //这个必须有
        <item name="android:windowAnimationStyle">@style/ActivityPresentAnimation</item>
    </style>
    <style name="ActivityPresentAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_present_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_present_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_present_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_present_out</item>
    </style>

    <!-- iOs action sheet theme-->
    <style name="ActionSheetTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>
    <style name="ActionSheetAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/action_sheet_in</item>
        <item name="android:activityOpenExitAnimation">@anim/action_sheet_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/action_sheet_in</item>
        <item name="android:activityCloseExitAnimation">@anim/action_sheet_out</item>
    </style>



</resources>
